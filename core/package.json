{
  "name": "next-banner",
  "version": "1.0.0-semantic-release",
  "description": "Generate Open Graph images for Next.js on build",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvarlagerlof/next-banner"
  },
  "author": "Alvar Lagerl√∂f",
  "license": "MIT",
  "keywords": [
    "react",
    "next",
    "next.js",
    "og",
    "og:image",
    "opengraph",
    "generate",
    "build"
  ],
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/client/index.js",
  "types": "./dist/client/index.d.ts",
  "bin": "./dist/cli/index.js",
  "scripts": {
    "lint": "eslint ./src --ext .ts,tsx",
    "build:esbuild": "rimraf dist && node ./esbuild.js",
    "build:esbuild:watch": "rimraf dist && node ./esbuild.js watch",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "build:watch": "concurrently \"yarn build:esbuild:watch\" \"yarn build:ts:watch\"",
    "build": "rimraf dist && yarn build:esbuild && yarn build:ts",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-jest": "^28.1.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "next": "12.2.0",
    "prettier": "^2.6.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "get-port": "^6.1.2",
    "merge-anything": "^5.0.2",
    "puppeteer": "^14.2.1",
    "tasuku": "^2.0.0"
  }
}
