{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "version": "cp README.md packages/core && cp LICENSE packages/core",
    "ci": "turbo run ci",
    "release": "release-it --ci"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "release-it": "^15.1.1",
    "release-it-yarn-workspaces": "workspace:*",
    "turbo": "^1.3.1"
  },
  "packageManager": "yarn@3.2.1",
  "version": "0.0.1"
}
