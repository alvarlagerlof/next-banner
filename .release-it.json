{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "plugins": {
    "release-it-yarn-workspaces": {
      "publish": true
    },
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "build", "hidden": false, "section": "Build Changes" }
        ]
      }
    }
  },
  "npm": false
}
