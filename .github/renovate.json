{
  "timezone": "Europe/Stockholm",
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "semanticCommitType": "deps",
      "semanticCommitScope": "package"
    },
    {
      "matchUpdateTypes": ["major"],
      "schedule": ["every weekend"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "package"
    }
  ]
}
