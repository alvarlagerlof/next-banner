{
  "root": true,
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier", "node"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["jest.setup.js", "__tests__/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
