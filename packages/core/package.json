{
  "name": "next-banner",
  "version": "1.0.0-semantic-release",
  "description": "Generate Open Graph images for Next.js on build",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvarlagerlof/next-banner"
  },
  "author": "Alvar Lagerl√∂f",
  "license": "MIT",
  "keywords": [
    "react",
    "next",
    "next.js",
    "og",
    "og:image",
    "opengraph",
    "generate",
    "build"
  ],
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/client/index.js",
  "types": "./dist/client/index.d.ts",
  "bin": "./dist/cli/index.js",
  "scripts": {
    "lint": "eslint ./src --ext .ts,tsx",
    "build:esbuild": "node ./esbuild.js",
    "build:esbuild:watch": "node ./esbuild.js watch",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "dev": "concurrently \"yarn build:esbuild:watch\" \"yarn build:ts:watch\"",
    "build": "yarn build:esbuild && yarn build:ts",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@types/jest": "28.1.4",
    "@types/node": "18.0.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "babel-jest": "28.1.2",
    "commitizen": "4.2.4",
    "concurrently": "7.2.2",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.14.39",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "7.30.1",
    "jest": "28.1.2",
    "jest-environment-jsdom": "28.1.2",
    "next": "12.2.0",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.3",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "cross-spawn": "7.0.3",
    "get-port": "6.1.2",
    "merge-anything": "5.0.2",
    "puppeteer": "15.3.1",
    "tasuku": "2.0.0"
  }
